<div class="container">

  <h1>List your space</h1>

  <%= simple_form_for [@user, @space] do |f| %>
    <%= f.input :name, hint: 'Go on, sell it to us...' %>
    <%= f.input :address %>
    <%= f.input :description, hint: 'Include everything that makes your space stand out!' %>
    <%= f.input :price_per_day, label: 'Price per day (in Â£)' %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.button :submit, class: 'btn-outline-dark' %>
  <% end %>

</div>
